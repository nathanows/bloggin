<% if @post.status == 'draft' %>
  <%= render partial: "shared/draft_banner", locals: {post: @post} %>
<% else %>
  <%= render partial: "shared/show_banner", locals: {post: @post} %>
<% end %>

<h2><%= @post.title %></h2>
<p><em>by <span><%= @post.author %></span> on: <%= @post.post_time %></em></p>
<hr />
<p><%= markdown(@post.body) %></p>

<hr />
<br />
<h3>Comments</h3>
<% if @comments.length == 0 %>
  <p><strong>No comments for this post.</strong></p>
<% else %>
  <%= render partial: "comment", collection: @comments, locals: {post: @post} %>
<% end %>

<%= render partial: "new_comment", locals: {comment: @comment, post: @post} %>
